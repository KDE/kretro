{
    "id": "org.kde.kretro",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kretro",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=xdg-documents:ro"
    ],
    "separate-locales": false,

    "modules": [
    	{
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kirigami-addons.git"
                }
            ]
        },
        {
            "name": "SDL3",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libsdl-org/SDL.git",
                    "tag": "release-3.2.16"
                }
            ]
        },
        {
            "name": "snes9x-libretro",
            "buildsystem": "simple",
            "build-commands": [
                "make -C libretro -j$FLATPAK_BUILDER_N_JOBS",
                "mkdir -p /app/lib/libretro",
                "install -Dm755 libretro/snes9x_libretro.so /app/lib/libretro/snes9x_libretro.so"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libretro/snes9x.git"
                }
            ]
        },
        {
            "name": "mgba-libretro",
            "buildsystem": "simple",
            "build-commands": [
                "make -f Makefile.libretro -j$FLATPAK_BUILDER_N_JOBS",
                "mkdir -p /app/lib/libretro",
                "install -Dm755 mgba_libretro.so /app/lib/libretro/mgba_libretro.so"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libretro/mgba.git"
                }
            ]
        },
        {
            "name": "nestopia-libretro",
            "buildsystem": "simple",
            "build-commands": [
                "make -C libretro -j$FLATPAK_BUILDER_N_JOBS",
                "mkdir -p /app/lib/libretro",
                "install -Dm755 libretro/nestopia_libretro.so /app/lib/libretro/nestopia_libretro.so"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libretro/nestopia.git"
                }
            ]
        },
        {
            "name": "gearsystem-libretro",
            "buildsystem": "simple",
            "build-commands": [
                "make -C platforms/libretro -j$FLATPAK_BUILDER_N_JOBS",
                "mkdir -p /app/lib/libretro",
                "install -Dm755 platforms/libretro/gearsystem_libretro.so /app/lib/libretro/gearsystem_libretro.so"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/drhelius/Gearsystem.git"
                }
            ]
        },
        {
            "name": "blastem-libretro",
            "buildsystem": "simple",
            "build-commands": [
                "make -f Makefile.libretro -j$FLATPAK_BUILDER_N_JOBS",
                "mkdir -p /app/lib/libretro",
                "install -Dm755 blastem_libretro.so /app/lib/libretro/blastem_libretro.so"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libretro/blastem.git",
                    "branch": "libretro"
                }
            ]
        },
        {
            "name": "kretro",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}

